{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES6"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./node_modules"
  ]
}
